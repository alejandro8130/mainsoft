<div class="container">
  <div class="row">
    <h1 class="text-center texto-formularios"><span class="borde-titulo-form">Ventas</span></h1>
    <br>
    <div class="col-md-offset-8">
      <div class="well well-sm">
        <%= form_tag ventas_path, class: "form-inline", role: "form",  method: 'get' do %>
  	      <label>Nombre: </label>
  	      <div class="form-group">
     	      <%= search_field_tag :search, params[:search], :class => "form-control", placeholder: "Ingrese empleado para Buscar", size: "25" %>
  	      </div>
  	      <button class="btn btn-primary btn-sm">
      	    <%= image_tag("search.png") %>
  	      </button>
        <% end %>
      </div>
    </div>
    
    <hr>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Total</th>
            <th>Tipo de Pago</th>
            <th>Empleado</th>
            <th>Cliente</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @ventas.each do |venta| %>
            <tr>
              <td><%= venta.fecha %></td>
              <td><%= venta.hora %></td>
              <td><%= venta.total %></td>
              <td><%= venta.tipos_pago.try(:nombre) %></td>
              <td><%= venta.empleado.try(:name)  %></td>
              <td><%= venta.cliente %></td>
              <td><%= link_to 'Mostrar', venta, class:"btn boton-azul" %></td>
              <%#<td><%= link_to 'Editar', edit_venta_path(venta), class:"btn boton-amarillo" %>
              <%#<td><%= link_to 'Eliminar', venta, method: :delete, data: { confirm: 'EstÃ¡ Seguro?' }, class:"btn boton-rojo" %>
              <td><%= link_to 'Generar Factura', '#', class:"btn btn-info" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <br>
      <%= will_paginate @ventas, renderer: BootstrapPagination::Rails %>



      <br>
      Ventas: <%= @ventas.count %>
      <br>

    </div>  <%= link_to 'Nueva Venta', new_venta_path, class:"btn boton-verde" %>
  </div>
</div>