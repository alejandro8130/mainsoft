<div class="container">
  <div class="row">
    <h1 class="text-center texto-formularios"><span class="borde-titulo-form">Proveedores</span></h1>
    <br>
    <div class="col-md-offset-8">
      <div class="well well-sm">
        <%= form_tag proveedores_path, class: "form-inline", role: "form",  method: 'get' do %>
  	      <label>Nombre: </label>
  	      <div class="form-group">
     	      <%= search_field_tag :search, params[:search], :class => "form-control", placeholder: "Ingrese nombre para Buscar", size: "25" %>
  	      </div>
  	      <button class="btn btn-primary btn-sm">
      	    <%= image_tag("search.png") %>
  	      </button>
        <% end %>
      </div>
    </div>
    
    <hr>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Nombre</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @proveedores.each do |proveedor| %>
            <tr>
              <td><%= proveedor.nombre %></td>
              <td><%= link_to 'Mostrar', proveedor, class:"btn boton-azul" %></td>
              <td><%= link_to 'Editar', edit_proveedor_path(proveedor), class:"btn boton-amarillo" %></td>
              <td><%= link_to 'Eliminar', proveedor, method: :delete, data: { confirm: 'EstÃ¡ Seguro?' }, class:"btn boton-rojo" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <br>
      <%= will_paginate @proveedores, renderer: BootstrapPagination::Rails %>



      <br>
      Proveedores: <%= @proveedores.count %>
      <br>

    </div>  <%= link_to 'Nuevo Proveedor', new_proveedor_path, class:"btn boton-verde" %>
  </div>
</div>