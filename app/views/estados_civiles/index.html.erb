<div class="container">
  <div class="row">
    <h1 class="text-center texto-formularios"><span class="borde-titulo-form">Estados Civiles</span></h1>
    <br>
    <div class="col-md-offset-8">
      <div class="well well-sm">
        <%= form_tag estados_civiles_path, class: "form-inline", role: "form",  method: 'get' do %>
  	      <label>Nombre: </label>
  	      <div class="form-group">
     	      <%= search_field_tag :search, params[:search], :class => "form-control", placeholder: "Ingrese nombre para Buscar", size: "25" %>
  	      </div>
  	      <button class="btn btn-primary btn-sm">
      	    <%= image_tag("search.png") %>
  	      </button>
        <% end %>
      </div>
    </div>
    
    <hr>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Nombre</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @estados_civiles.each do |estados_civil| %>
            <tr>
              <td><%= estados_civil.nombre %></td>
              <td><%= link_to 'Mostrar', estados_civil, class:"btn boton-azul" %></td>
              <td><%= link_to 'Editar', edit_estados_civil_path(estados_civil), class:"btn boton-amarillo" %></td>
              <td><%= link_to 'Eliminar', estados_civil, method: :delete, data: { confirm: 'EstÃ¡ Seguro?' }, class:"btn boton-rojo" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <br>
      <%= will_paginate @estados_civiles, renderer: BootstrapPagination::Rails %>



      <br>
      Estados Civiles: <%= @estados_civiles.count %>
      <br>

    </div>    <%= link_to 'Nuevo Estado Civil', new_estados_civil_path, class:"btn boton-verde" %>
  </div>
</div>