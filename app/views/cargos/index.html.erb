<div class="container">
  <div class="row">
    <h1 class="text-center texto-formularios"><span class="borde-titulo-form">Cargos</span></h1>
    <br>
    <div class="col-md-offset-8">
      <div class="well well-sm">
        <%= form_tag cargos_path, class: "form-inline", role: "form",  method: 'get' do %>
  	      <label>Nombre: </label>
  	      <div class="form-group">
     	      <%= search_field_tag :search, params[:search], :class => "form-control", placeholder: "Ingrese nombre para Buscar", size: "25" %>
  	      </div>
  	      <button class="btn btn-primary btn-sm">
      	    <%= image_tag("search.png") %>
  	      </button>
        <% end %>
      </div>
    </div>
    
    <hr>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Salario Devengado</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @cargos.each do |cargo| %>
            <tr>
              <td><%= cargo.nombre %></td>
              <td><%= cargo.salario_devengado %></td>
              <td><%= link_to 'Mostrar', cargo, class:"btn boton-azul" %></td>
              <td><%= link_to 'Editar', edit_cargo_path(cargo), class:"btn boton-amarillo" %></td>
              <td><%= link_to 'Eliminar', cargo, method: :delete, data: { confirm: 'EstÃ¡ Seguro?' }, class:"btn boton-rojo" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <br>
      <%= will_paginate @cargos, renderer: BootstrapPagination::Rails %>



      <br>
      Cargos: <%= @cargos.count %>
      <br>

      <%= link_to 'Nuevo Cargo', new_cargo_path, class:"btn boton-verde" %>
    </div>
  </div>
</div>