<div class="container">
  <div class="row">
    <h1 class="text-center texto-formularios"><span class="borde-titulo-form">Usuarios</span></h1>
    <br>
    <div class="col-md-offset-8">
      <div class="well well-sm">
        <%= form_tag usuarios_path, class: "form-inline", role: "form",  method: 'get' do %>
  	      <label>Nombre: </label>
  	      <div class="form-group">
     	      <%= search_field_tag :search, params[:search], :class => "form-control", placeholder: "Ingrese nombre para Buscar", size: "25" %>
  	      </div>
  	      <button class="btn btn-primary btn-sm">
      	    <%= image_tag("search.png") %>
  	      </button>
        <% end %>
      </div>
    </div>
    
    <hr>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Nombre de Usuario</th>
            <th>Contraseña</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @usuarios.each do |usuario| %>
            <tr>
              <td><%= usuario.nombre_usuario %></td>
              <td><%= usuario.contrasena %></td>
              <td><%= link_to 'Mostrar', usuario, class:"btn boton-azul" %></td>
              <td><%= link_to 'Editar', edit_usuario_path(usuario), class:"btn boton-amarillo" %></td>
              <td><%= link_to 'Eliminar', usuario, method: :delete, data: { confirm: 'Está Seguro?' }, class:"btn boton-rojo" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <br>
      <%= will_paginate @usuarios, renderer: BootstrapPagination::Rails %>



      <br>
      Usuarios: <%= @usuarios.count %>
      <br>

    </div>  <%= link_to 'Nuevo Usuario', new_usuario_path, class:"btn boton-verde" %>
  </div>
</div>