<%= simple_form_for(@usuario) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="col-md-3 col-md-offset-4 col-sm-6">
       <%= f.input :nombre_usuario, :label => "Nombre de Usuario", placeholder: "Usuario" %>
    </div>
    <div class="col-md-3 col-md-offset-4 col-sm-6">
      <%= f.input :contrasena, :label => "Contraseña", placeholder: "Contraseña" %>
    </div>
  </div>

  <div class="form-actions col-md-2 col-md-offset-4">
    <%= f.button :submit, class:"btn btn-success" %>
  </div>
<% end %>
