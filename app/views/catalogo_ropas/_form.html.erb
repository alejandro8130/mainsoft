<%= simple_form_for(@catalogo_ropa) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    
    <div class="col-md-3 col-md-offset-4 col-sm-6">
      <%= f.input :nombre, :label => "Nombre", placeholder: "Nombre" %>
    </div>
    
  	
  	<div class="col-md-3 col-md-offset-4 ">
    	<%= f.input :photo, as: :file, :label => "Foto", class: "form-control" %>
  	</div>
    
    
    <div class="col-md-3 col-md-offset-4 col-sm-6">
      <%= f.input :valor, :label => "Valor", placeholder: "Valor" %>
    </div>
  </div>

  <div class="form-actions col-md-2 col-md-offset-4">
    <%= f.button :submit, 'Guardar', class:"btn btn-success" %>
  </div>
  
<% end %>