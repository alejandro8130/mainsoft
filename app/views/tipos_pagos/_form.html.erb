<%= simple_form_for(@tipos_pago) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="col-md-4 col-md-offset-4">
      <%= f.input :nombre,placeholder:"Tipo de Pago"%>
    </div>
  </div>

  <div class="form-actions col-md-2 col-md-offset-4">
    <%= f.button :submit,'Guardar', class:"btn btn-success" %>
  </div>
<% end %>
