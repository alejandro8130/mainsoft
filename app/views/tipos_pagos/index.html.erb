<div class="container">
  <div class="row">
    <h1 class="text-center texto-formularios"><span class="borde-titulo-form">Tipos de Pago</span></h1>
    <br>
    <div class="col-md-offset-8">
      <div class="well well-sm">
        <%= form_tag tipos_pagos_path, class: "form-inline", role: "form",  method: 'get' do %>
  	      <label>Nombre: </label>
  	      <div class="form-group">
     	      <%= search_field_tag :search, params[:search], :class => "form-control", placeholder: "Ingrese nombre para Buscar", size: "25" %>
  	      </div>
  	      <button class="btn btn-primary btn-sm">
      	    <%= image_tag("search.png") %>
  	      </button>
        <% end %>
      </div>
    </div>
    
    <hr>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Nombre</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @tipos_pagos.each do |tipos_pago| %>
            <tr>
              <td><%= tipos_pago.nombre %></td>
              <td><%= link_to 'Mostrar', tipos_pago, class:"btn boton-azul" %></td>
              <td><%= link_to 'Editar', edit_tipos_pago_path(tipos_pago), class:"btn boton-amarillo" %></td>
              <td><%= link_to 'Eliminar', tipos_pago, method: :delete, data: { confirm: 'EstÃ¡ Seguro?' }, class:"btn boton-rojo" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <br>
      <%= will_paginate @tipos_pagos, renderer: BootstrapPagination::Rails %>



      <br>
      Tipos de Pago: <%= @tipos_pagos.count %>
      <br>

    </div>  <%= link_to 'Nuevo Tipo de Pago', new_tipos_pago_path, class:"btn boton-verde" %>
  </div>
</div>