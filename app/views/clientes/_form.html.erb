<%= simple_form_for(@cliente) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    
    <div class="col-md-12">
      <div class="col-md-4 col-sm-6">
        <div class="col-md-11"> 
          <%= f.input :nombre, placeholder: "Nombre" %>
        </div>
      </div>
      
      <div class="col-md-4 col-sm-6">
        <div class="col-md-11"> 
          <%= f.input :apellido, placeholder: "Apellido" %>
          </div>
      </div>
      
      <div class="col-md-4 col-sm-6">
        <div class="col-md-11"> 
          <%= f.input :nro_documento, :label => "Nro Documento", placeholder: "Nro Documento" %>
          </div>
      </div>
    </div>
    
    
    <div class="col-md-12">
      <div class="col-md-4 col-sm-6">
        <div class="col-md-11"> 
          <%= f.association :tipos_documento, :label => "Tipo de Documento", placeholder: "Tipo Documento",prompt:"Seleccione Tipo de Documento" %>
        </div>
      </div>
      
      <div class="col-md-4 col-sm-6">
        <div class="col-md-11"> 
          <%= f.input :telefono, placeholder: "Telefono" %>
        </div>
      </div>
      
      <div class="col-md-4 col-sm-6">
        <div class="col-md-11"> 
          <%= f.input :celular, placeholder: "Celular" %>
        </div>
      </div>    
    </div>
    
    <div class="col-md-12">
      <div class="col-md-4 col-sm-6">
        <div class="col-md-11"> 
          <%= f.input :email, placeholder: "Email" %>
        </div>
      </div>   
      
      <div class="col-md-4 col-sm-6">
        <div class="col-md-11"> 
          <%= f.input :direccion, :label => "Dirección", placeholder: "Dirección" %>
        </div>
      </div>
      
      <div class="col-md-4 col-sm-6">
        <div class="col-md-11"> 
          <%= f.input :ciudad_nombre, :url => autocomplete_ciudad_nombre_clientes_path, :as => :autocomplete, :label => "Ciudad", placeholder: "Ciudad" %>
        </div>
      </div>
    </div>
    
    <div class="col-md-12">
      <div class="col-md-4 col-sm-6">
        <div class="col-md-11"> 
          
          <%= f.input :fecha_nacimiento, as: :datetime_picker, readonly: true,
              	input_html: {value: @cliente.fecha_nacimiento.try(:strftime, '%d/%m/%Y'),
                    	data: {date_options: {format: 'DD/MM/YYYY', ignoreReadonly: true}}},label:"Fecha de Nacimiento",placeholder:"Fecha de Nacimiento" %>
  
        </div>
      </div>
      
      <div class="col-md-7 col-sm-6">
        <div class="col-md-6"> 
          <%= f.input :genero, collection: [['Masculino', true], ['Femenino', false]],item_label_class: 'checkbox-inline', item_wrapper_tag: false,label:"Género", prompt:"Seleccione Género" %>
        </div>
      </div>
    </div>
    
    
  </div><br><br>
  <div class="col-md-2 espacio-botones col-md-offset-4">
    <div class="form-actions col-md- col-md-offset-1">
      <%= f.button :submit, class:"btn btn-success" %>
    </div>
  </div>
<% end %>
